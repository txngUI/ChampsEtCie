<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/cercle_background">

    <ImageView
        android:id="@+id/closePopup"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/sort"
        android:clickable="true"
        android:contentDescription="@string/close_popup_description"
        android:focusable="true"
        android:src="@drawable/ic_close"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/league"
        android:text="@string/sort"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp" />

    <RadioGroup
        android:layout_below="@id/sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="20dp"
        >

        <RadioButton
            android:id="@+id/alphaAsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alphabétique - A à Z"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/alphaDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Alphabétique - Z à A"
            android:textSize="18sp"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/newestToOldest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Du plus récent au plus vieux"
            android:textSize="18sp"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/oldestToNewest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Du plus vieux au plus récent"
            android:textSize="18sp"
            android:textColor="@color/white" />
    </RadioGroup>


</RelativeLayout>